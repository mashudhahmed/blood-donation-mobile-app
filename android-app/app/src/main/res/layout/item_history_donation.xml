<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/surface_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:baselineAligned="false">

        <!-- ================= TOP ROW ================= -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- DONATION ICON IN CIRCLE -->
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_blood_request_icon"
                android:background="@drawable/bg_circle_donation"
                android:padding="10dp"
                app:tint="@android:color/white"
                android:contentDescription="@string/donation_icon" />

            <!-- DONATION INFO -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <!-- DONATION TITLE -->
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_donation_history"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />

                <!-- BLOOD TYPE & DATE -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="2dp">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_blood_drop_small"
                        android:contentDescription="@string/blood_type_icon"
                        app:tint="@color/primary_red"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/tvBloodType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A+"
                        android:textSize="13sp"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/tvDateSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Â· Dec 10, 2023"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary" />
                </LinearLayout>

                <!-- DONATION CENTER -->
                <TextView
                    android:id="@+id/tvHospital"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    app:drawableStartCompat="@drawable/ic_hospital_small"
                    android:drawablePadding="4dp"
                    app:drawableTint="@color/text_secondary"
                    android:gravity="center_vertical"
                    android:text="City Blood Bank"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>

            <!-- STATUS BADGE -->
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="@string/status_completed"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/success_text"
                app:cornerRadius="12dp"
                app:backgroundTint="@color/status_completed_background" />
        </LinearLayout>

        <!-- ================= SEPARATOR LINE ================= -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            android:background="@color/border_color" />

        <!-- ================= DETAILS ROW ================= -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- LOCATION -->
            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:drawableStartCompat="@drawable/ic_location"
                android:drawablePadding="8dp"
                app:drawableTint="@color/text_secondary"
                android:gravity="center_vertical"
                android:text="Dhaka, Bangladesh"
                android:textSize="12sp"
                android:textColor="@color/text_secondary" />

            <!-- BLOOD UNITS -->
            <TextView
                android:id="@+id/tvUnits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:drawableStartCompat="@drawable/ic_blood_bag"
                android:drawablePadding="4dp"
                app:drawableTint="@color/primary_red"
                android:gravity="center_vertical"
                android:text="1 unit donated"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />
        </LinearLayout>

        <!-- ================= IMPACT MESSAGE ================= -->
        <TextView
            android:id="@+id/tvImpact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawablePadding="6dp"
            app:drawableTint="@color/success_color"
            android:gravity="center_vertical"
            android:text="You helped save lives!"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/success_color" />

        <!-- ================= ACTION BUTTONS ================= -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewDetails"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="@string/button_view_details"
                android:textSize="13sp"
                android:textColor="@color/text_secondary"
                app:cornerRadius="18dp"
                app:strokeColor="@color/border_color"
                app:strokeWidth="1dp"
                android:backgroundTint="@android:color/transparent"
                android:textAllCaps="false" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewCertificate"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="@string/button_view_certificate"
                android:textSize="13sp"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/success_color"
                app:cornerRadius="18dp"
                android:textAllCaps="false" />
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>