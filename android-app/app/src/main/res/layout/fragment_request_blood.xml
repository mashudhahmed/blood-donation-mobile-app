<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/ic_arrow_back_white"
        app:title="Request Blood"
        app:titleTextColor="@android:color/white"
        android:background="@color/primary_red_dark" />

    <!-- ScrollView with scrollbar hidden -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="20dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Patient Name -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Patient Name"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"
                android:textColor="#333333"
                tools:ignore="HardcodedText" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutPatientName"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxStrokeColor="#cccccc"
                app:boxStrokeWidth="1dp"
                app:boxStrokeWidthFocused="2dp"
                app:boxBackgroundColor="#fafafa"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/patientNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter patient name"
                    android:textSize="14sp"
                    android:padding="12dp"
                    android:textColor="#333333" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Medical Name -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Medical Name"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"
                android:textColor="#333333" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutMedicalName"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxStrokeColor="#cccccc"
                app:boxStrokeWidth="1dp"
                app:boxStrokeWidthFocused="2dp"
                app:boxBackgroundColor="#fafafa"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/medicalNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter medical name"
                    android:textSize="14sp"
                    android:padding="12dp"
                    android:textColor="#333333" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Phone Number -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"
                android:textColor="#333333" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutPhone"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxStrokeColor="#cccccc"
                app:boxStrokeWidth="1dp"
                app:boxStrokeWidthFocused="2dp"
                app:boxBackgroundColor="#fafafa"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/phoneNumberEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter phone number"
                    android:inputType="phone"
                    android:textSize="14sp"
                    android:padding="12dp"
                    android:textColor="#333333" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Units/Blood Bag -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Units/Blood Bag"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"
                android:textColor="#333333" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutUnits"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxStrokeColor="#cccccc"
                app:boxStrokeWidth="1dp"
                app:boxStrokeWidthFocused="2dp"
                app:boxBackgroundColor="#fafafa"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/unitsEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter number of units"
                    android:inputType="number"
                    android:textSize="14sp"
                    android:padding="12dp"
                    android:textColor="#333333" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Select Blood Group -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Blood Group"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"
                android:textColor="#333333" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutBloodGroup"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxStrokeColor="#cccccc"
                app:boxStrokeWidth="1dp"
                app:boxStrokeWidthFocused="2dp"
                app:boxBackgroundColor="#fafafa"
                app:hintEnabled="false">

                <AutoCompleteTextView
                    android:id="@+id/actvBloodGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select blood group"
                    android:textSize="14sp"
                    android:padding="12dp"
                    android:textColor="#333333"
                    android:inputType="none"
                    android:completionThreshold="1"
                    android:dropDownWidth="match_parent"
                    android:dropDownHeight="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Blood Donation Date -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blood Donation Date"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"
                android:textColor="#333333" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutDate"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxStrokeColor="#cccccc"
                app:boxStrokeWidth="1dp"
                app:boxStrokeWidthFocused="2dp"
                app:boxBackgroundColor="#fafafa"
                app:endIconDrawable="@drawable/ic_calendar"
                app:endIconTint="#666666"
                app:endIconMode="custom"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/donationDateEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select date"
                    android:textSize="14sp"
                    android:padding="12dp"
                    android:textColor="#333333"
                    android:focusable="false"
                    android:clickable="true" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Blood Donation Time -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blood Donation Time"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"
                android:textColor="#333333" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutTime"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxStrokeColor="#cccccc"
                app:boxStrokeWidth="1dp"
                app:boxStrokeWidthFocused="2dp"
                app:boxBackgroundColor="#fafafa"
                app:endIconDrawable="@drawable/ic_clock"
                app:endIconTint="#666666"
                app:endIconMode="custom"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/donationTimeEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select time"
                    android:textSize="14sp"
                    android:padding="12dp"
                    android:textColor="#333333"
                    android:focusable="false"
                    android:clickable="true" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Select District -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select District"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"
                android:textColor="#333333" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutDistrict"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxStrokeColor="#cccccc"
                app:boxStrokeWidth="1dp"
                app:boxStrokeWidthFocused="2dp"
                app:boxBackgroundColor="#fafafa"
                app:hintEnabled="false">

                <AutoCompleteTextView
                    android:id="@+id/actvDistrict"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select district"
                    android:textSize="14sp"
                    android:padding="12dp"
                    android:textColor="#333333"
                    android:inputType="none"
                    android:completionThreshold="1"
                    android:dropDownWidth="match_parent"
                    android:dropDownHeight="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Area -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Area"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"
                android:textColor="#333333" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutArea"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxStrokeColor="#cccccc"
                app:boxStrokeWidth="1dp"
                app:boxStrokeWidthFocused="2dp"
                app:boxBackgroundColor="#fafafa"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/areaEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter area"
                    android:textSize="14sp"
                    android:padding="12dp"
                    android:textColor="#333333" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Progress Bar -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:visibility="gone" />

            <!-- Submit Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Submit Blood Request"
                android:textSize="14sp"
                android:textStyle="bold"
                app:cornerRadius="8dp"
                app:backgroundTint="#d32f2f"
                app:elevation="2dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>