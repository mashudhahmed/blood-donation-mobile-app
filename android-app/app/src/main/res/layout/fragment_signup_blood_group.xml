<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- HALF SCREEN RED BACKGROUND -->
    <View
        android:id="@+id/dark_red_background"
        android:layout_width="match_parent"
        android:layout_height="365dp"
        android:background="@color/primary_red_dark" />

    <!-- YOUR EXISTING SCROLLVIEW - WITH TRANSPARENT BACKGROUND -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="30dp"
            android:background="@android:color/transparent">

            <!-- Progress Bar (ADDED HERE) -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:visibility="gone" />

            <!-- Blood Group Icon -->
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:src="@drawable/ic_blood_drop"
                app:tint="@color/surface_white" />

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="40dp"
                android:text="Pick Your Blood Group"
                android:textColor="@color/surface_white"
                android:textSize="28sp"
                android:textStyle="bold" />

            <!-- MAIN CONTAINER CARD -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp"
                app:cardBackgroundColor="@color/surface_white"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="20dp"
                    android:orientation="vertical">

                    <!-- Row 1: A+ and A- -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal">

                        <!-- A+ Card -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardAPositive"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardBackgroundColor="@color/surface_white"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="2dp"
                            app:strokeColor="@color/border_color"
                            app:strokeWidth="1dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingLeft="20dp">

                                <!-- Blood Group Text -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="A+"
                                    android:textColor="@color/text_primary"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- A- Card -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardANegative"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardBackgroundColor="@color/surface_white"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="2dp"
                            app:strokeColor="@color/border_color"
                            app:strokeWidth="1dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="A-"
                                    android:textColor="@color/text_primary"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>

                    <!-- Row 2: B+ and B- -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal">

                        <!-- B+ Card -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardBPositive"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardBackgroundColor="@color/surface_white"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="2dp"
                            app:strokeColor="@color/border_color"
                            app:strokeWidth="1dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="B+"
                                    android:textColor="@color/text_primary"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    tools:ignore="HardcodedText" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- B- Card -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardBNegative"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardBackgroundColor="@color/surface_white"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="2dp"
                            app:strokeColor="@color/border_color"
                            app:strokeWidth="1dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="B-"
                                    android:textColor="@color/text_primary"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>

                    <!-- Row 3: O+ and O- -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal">

                        <!-- O+ Card -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardOPositive"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardBackgroundColor="@color/surface_white"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="2dp"
                            app:strokeColor="@color/border_color"
                            app:strokeWidth="1dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="O+"
                                    android:textColor="@color/text_primary"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- O- Card -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardONegative"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardBackgroundColor="@color/surface_white"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="2dp"
                            app:strokeColor="@color/border_color"
                            app:strokeWidth="1dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="O-"
                                    android:textColor="@color/text_primary"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>

                    <!-- Row 4: AB+ and AB- -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="32dp"
                        android:orientation="horizontal">

                        <!-- AB+ Card -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardABPositive"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardBackgroundColor="@color/surface_white"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="2dp"
                            app:strokeColor="@color/border_color"
                            app:strokeWidth="1dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="AB+"
                                    android:textColor="@color/text_primary"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- AB- Card -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardABNegative"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardBackgroundColor="@color/surface_white"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="2dp"
                            app:strokeColor="@color/border_color"
                            app:strokeWidth="1dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="AB-"
                                    android:textColor="@color/text_primary"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>

                    <!-- Finish Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnFinish"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="310dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="24dp"
                        android:letterSpacing="0.1"
                        android:stateListAnimator="@null"
                        android:text="Finish"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:backgroundTint="@color/primary_red_dark"
                        app:cornerRadius="16dp"
                        app:elevation="4dp" />


                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</FrameLayout>