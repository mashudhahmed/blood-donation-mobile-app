<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Top red background -->
    <View
        android:layout_width="match_parent"
        android:layout_height="365dp"
        android:background="@color/primary_red_dark" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="30dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <!-- Icon -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_shield_check"
                android:contentDescription="Verification shield icon"
                tools:ignore="HardcodedText" /> <!-- Fixed -->

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="Verify Your Email"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/surface_white"
                tools:ignore="HardcodedText" />

            <!-- Subtitle -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="We sent a verification link to your email address"
                android:textSize="16sp"
                android:textColor="@color/text_light"
                tools:ignore="HardcodedText" />

            <!-- Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/surface_white"
                android:padding="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Click the link in your email, then return to this app."
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:gravity="center"
                        tools:ignore="HardcodedText" />

                    <!-- Email Display -->
                    <TextView
                        android:id="@+id/tvEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Email: user@example.com"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary"
                        android:gravity="center"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <!-- Resend -->
                    <TextView
                        android:id="@+id/tvResend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="Resend email"
                        android:textColor="@color/primary_red"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:focusable="true"
                        tools:ignore="HardcodedText" />

                    <!-- Timer -->
                    <TextView
                        android:id="@+id/tvTimer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Resend available in 60s"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        tools:ignore="HardcodedText" />

                    <!-- Verify -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnVerify"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="32dp"
                        android:text="I have verified"
                        android:textAllCaps="false"
                        android:textColor="@color/surface_white"
                        app:cornerRadius="16dp"
                        app:backgroundTint="@color/primary_red_dark"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

</FrameLayout>