<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/surface_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- ================= TOP ROW ================= -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- PROFILE IMAGE -->
            <ImageView
                android:id="@+id/imgProfile"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_user_placeholder"
                android:scaleType="centerCrop"
                android:background="@drawable/bg_circle"
                android:clipToOutline="true" />

            <!-- NAME + ADDRESS -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <!-- NAME + BLOOD GROUP (SAME LINE) -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Farjana Afrin"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/tvBloodGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="O+"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_red" />
                </LinearLayout>

                <!-- ADDRESS -->
                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sreekol Laxmikol, Dubila\nPabna Sadar, Pabna"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>

            <!-- CHAT + CALL (RIGHT SIDE) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/btnChat"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_chat"
                    android:background="@drawable/bg_icon_circle_light"
                    android:padding="6dp"
                    app:tint="@color/primary_red" />

                <ImageView
                    android:id="@+id/btnCall"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_call"
                    android:background="@drawable/bg_icon_circle_light"
                    android:padding="6dp"
                    app:tint="@color/primary_red" />
            </LinearLayout>
        </LinearLayout>

        <!-- ================= BUTTONS ================= -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewDetails"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="View Details"
                android:textSize="13sp"
                android:textColor="@color/text_secondary"
                app:cornerRadius="18dp"
                app:strokeColor="@color/border_color"
                app:strokeWidth="1dp"
                android:backgroundTint="@android:color/transparent"
                android:textAllCaps="false" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRequest"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Request for Donates"
                android:textSize="13sp"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/primary_red"
                app:cornerRadius="18dp"
                android:textAllCaps="false" />
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
