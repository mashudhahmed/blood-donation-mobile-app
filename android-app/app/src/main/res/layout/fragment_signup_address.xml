<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- HALF SCREEN RED BACKGROUND -->
    <View
        android:id="@+id/dark_red_background"
        android:layout_width="match_parent"
        android:layout_height="365dp"
        android:background="@color/primary_red_dark" />

    <!-- YOUR EXISTING SCROLLVIEW - WITH TRANSPARENT BACKGROUND -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="30dp"
            android:background="@android:color/transparent">

            <!-- Top Spacing -->
            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@null" />


            <!-- ADDRESS ICON SECTION - ADDED -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="20dp">

                <!-- Location Icon in a Circle -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="@color/white"
                    android:outlineSpotShadowColor="@color/shadow_color"
                    android:outlineAmbientShadowColor="@color/shadow_color">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="@color/white">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_location"
                        app:tint="@color/primary_red_dark"
                        android:scaleType="fitCenter"
                        tools:ignore="ContentDescription" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address Details"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/surface_white"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                tools:ignore="HardcodedText" />

            <!-- Subtitle (Optional) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fill in your address information"
                android:textSize="16sp"
                android:textColor="@color/surface_white"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:alpha="0.9"
                tools:ignore="HardcodedText" />

            <!-- MAIN CONTAINER CARD -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/surface_white"
                android:layout_marginTop="24dp"
                android:padding="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">



                    <!-- District Dropdown -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayoutDistrict"
                        android:layout_width="310dp"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:boxStrokeColor="@color/border_color"
                        app:boxStrokeWidth="1dp"
                        app:boxStrokeWidthFocused="2dp"
                        app:boxBackgroundColor="@color/border_light"
                        app:startIconDrawable="@drawable/ic_location"
                        app:startIconTint="@color/text_secondary"
                        app:hintEnabled="false"
                        android:layout_marginBottom="16dp"
                        android:layout_gravity="center">

                        <AutoCompleteTextView
                            android:id="@+id/actvDistrict"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Select District*"
                            android:textSize="16sp"
                            android:padding="16dp"
                            android:textColor="@color/text_primary"
                            android:inputType="none"
                            android:completionThreshold="1"
                            android:dropDownWidth="match_parent"
                            android:dropDownHeight="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Post Office Dropdown -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayoutPostOffice"
                        android:layout_width="310dp"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:boxStrokeColor="@color/border_color"
                        app:boxStrokeWidth="1dp"
                        app:boxStrokeWidthFocused="2dp"
                        app:boxBackgroundColor="@color/border_light"
                        app:startIconDrawable="@drawable/ic_post_office"
                        app:startIconTint="@color/text_secondary"
                        app:hintEnabled="false"
                        android:layout_marginBottom="16dp"
                        android:layout_gravity="center">

                        <AutoCompleteTextView
                            android:id="@+id/actvPostOffice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Select Post office*"
                            android:textSize="16sp"
                            android:padding="16dp"
                            android:textColor="@color/text_primary"
                            android:inputType="none"
                            android:completionThreshold="1"
                            android:dropDownWidth="match_parent"
                            android:dropDownHeight="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Police Station Dropdown -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayoutPoliceStation"
                        android:layout_width="310dp"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:boxStrokeColor="@color/border_color"
                        app:boxStrokeWidth="1dp"
                        app:boxStrokeWidthFocused="2dp"
                        app:boxBackgroundColor="@color/border_light"
                        app:startIconDrawable="@drawable/ic_police"
                        app:startIconTint="@color/text_secondary"
                        app:hintEnabled="false"
                        android:layout_marginBottom="16dp"
                        android:layout_gravity="center">

                        <AutoCompleteTextView
                            android:id="@+id/actvPoliceStation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Select Police Station*"
                            android:textSize="16sp"
                            android:padding="16dp"
                            android:textColor="@color/text_primary"
                            android:inputType="none"
                            android:completionThreshold="1"
                            android:dropDownWidth="match_parent"
                            android:dropDownHeight="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Village/Home Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayoutVillage"
                        android:layout_width="310dp"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:boxStrokeColor="@color/border_color"
                        app:boxStrokeWidth="1dp"
                        app:boxStrokeWidthFocused="2dp"
                        app:boxBackgroundColor="@color/border_light"
                        app:startIconDrawable="@drawable/ic_home"
                        app:startIconTint="@color/text_secondary"
                        app:hintEnabled="false"
                        android:layout_marginBottom="16dp"
                        android:layout_gravity="center">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etVillage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter Village/Home*"
                            android:textSize="16sp"
                            android:padding="16dp"
                            android:textColor="@color/text_primary"
                            />

                    </com.google.android.material.textfield.TextInputLayout>


                    <!-- Road/Block/Sector Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayoutRoad"
                        android:layout_width="310dp"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:boxStrokeColor="@color/border_color"
                        app:boxStrokeWidth="1dp"
                        app:boxStrokeWidthFocused="2dp"
                        app:boxBackgroundColor="@color/border_light"
                        app:startIconTint="@color/text_secondary"
                        app:hintEnabled="false"
                        android:layout_marginBottom="24dp"
                        android:layout_gravity="center">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etRoad"
                            android:layout_width="match_parent"
                            android:layout_height="58dp"
                            android:hint="Enter Road/Block/Sector"
                            android:padding="16dp"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Next Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnNextAddress"
                        android:layout_width="310dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="24dp"
                        android:layout_gravity="center"
                        android:text="Next"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:letterSpacing="0.1"
                        app:cornerRadius="16dp"
                        app:elevation="4dp"
                        app:backgroundTint="@color/primary_red_dark"
                        android:stateListAnimator="@null" />


                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Bottom Spacing -->
            <View
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:background="@null" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>