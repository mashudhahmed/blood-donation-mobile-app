<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.DonateBlood" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/primary_red</item>
        <item name="colorPrimaryVariant">@color/primary_red_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/link_color</item>
        <item name="colorSecondaryVariant">@color/primary_red_light</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/primary_red_dark</item>

        <!-- Background -->
        <item name="android:colorBackground">@color/background_light</item>

        <!-- Toolbar/ActionBar theme -->
        <item name="toolbarStyle">@style/Widget.DonateBlood.Toolbar</item>

        <!-- ADD THESE 3 LINES FOR TEXT VISIBILITY -->
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="colorOnSurface">@color/text_primary</item>
    </style>

    <!-- Toolbar style -->
    <style name="Widget.DonateBlood.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/primary_red</item>
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
    </style>
</resources>